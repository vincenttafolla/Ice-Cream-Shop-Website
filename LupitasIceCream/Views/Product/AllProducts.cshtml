@model List<Product>
@{
    ViewData["Title"] = "AllProducts";
}

<h2>All Products</h2>

<table class="table table-hover">
    <tbody>
        <tr>
            <th style="padding-right: 100px">Name</th>
            <th>Price</th>
        </tr>
        @foreach (Product prod in Model)
        {
            <tr>
                <td>@prod.Name</td>
                <td>@prod.Price</td>
            </tr>
        }
    </tbody>
</table>
